<script type="text/javascript" src="http://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
	//로그아웃 
	$('#logoutBtn').click(function(){
		 $.ajax({
			type: 'post',
			url: '/projectMVC/member/logout.do',
			success: function(){
				location.href="/projectMVC/index.do";
			},
			error: function(e){
				console.log(e);
			}
		}); 
	});
		
	
</script>