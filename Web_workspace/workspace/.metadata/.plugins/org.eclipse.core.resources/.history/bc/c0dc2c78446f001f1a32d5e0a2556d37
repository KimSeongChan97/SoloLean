<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardSQL">

    <!-- 게시물 등록 -->
    <insert id="addBoard" parameterType="board.bean.BoardDTO">
        INSERT INTO board (title, content, writer, created_at)
        VALUES (#{title}, #{content}, #{writer}, SYSDATE)
    </insert>

    <!-- 게시물 목록 조회 -->
    <select id="getBoardList" resultType="board.bean.BoardDTO">
        SELECT * FROM board ORDER BY created_at DESC
    </select>

    <!-- 특정 게시물 조회 -->
    <select id="getBoard" parameterType="int" resultType="board.bean.BoardDTO">
        SELECT * FROM board WHERE board_seq = #{boardSeq}
    </select>

    <!-- 게시물 수정 -->
    <update id="updateBoard" parameterType="board.bean.BoardDTO">
        UPDATE board
        SET title = #{title}, content = #{content}
        WHERE board_seq = #{boardSeq}
    </update>

    <!-- 게시물 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        DELETE FROM board WHERE board_seq = #{boardSeq}
    </delete>
</mapper>