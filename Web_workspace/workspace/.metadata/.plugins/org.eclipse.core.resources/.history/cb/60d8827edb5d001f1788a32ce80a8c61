<script type="text/javascript">
//지역변수, 구역단위
let a = 100;
a = 250;
console.log(a) // 250

{
	let a = 200;
	console.log(a) // 200
	{
		let a = 300;
		console.log(a) // 300
		{
			let a = 400;
			console.log(a) // 400
		}
	}
}



</script>

