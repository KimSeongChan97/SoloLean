package member.service;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import member.control.CommandProcess;

public class CheckIdService implements CommandProcess {

    @Override
    public String requestPro(HttpServletRequest request, HttpServletResponse response) throws Exception {
        String id = request.getParameter("id");

        // 아이디 중복 확인 로직 작성 (예시로 고정된 값 사용)
        boolean isExist = checkIdInDatabase(id);

        // 중복 여부에 따른 결과 반환
        if (isExist) {
            return "exist";  // 중복된 경우
        } else {
            return "non_exist";  // 중복되지 않은 경우
        }
    }

    private boolean checkIdInDatabase(String id) {
        // 실제 DB 연동 로직이 들어갈 부분 (예시로 고정된 값을 사용)
        return false;  // 아이디가 중복되지 않은 것으로 처리
    }
}
