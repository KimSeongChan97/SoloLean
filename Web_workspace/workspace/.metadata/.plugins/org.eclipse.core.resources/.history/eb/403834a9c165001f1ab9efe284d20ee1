function goBack() {
    window.history.back();
}

function loadWeatherData() {
    // CORS 문제를 해결하기 위해 프록시 서버를 사용한 URL
	const url = 'https://corsproxy.io/?https://apihub.kma.go.kr/api/typ01/url/kma_sfctm2.php?tm=202211300900&stn=0&help=1&authKey=U0AafwqeSO-AGn8KnsjvLA';
	
    
    fetch(url)
        .then(response => response.text())
        .then(data => {
            // 응답 데이터를 콘솔에 출력
            console.log(data);
            
            // 응답 데이터를 XML로 파싱
            const parser = new DOMParser();
            const xmlDoc = parser.parseFromString(data, 'text/xml');
            console.log(xmlDoc);
            
            // 필요한 기상 정보 추출 (예: 기온, 날씨 상태 등)
            const weatherData = xmlDoc.getElementsByTagName('weather')[0]?.textContent;
            const temperatureData = xmlDoc.getElementsByTagName('temp')[0]?.textContent;
            
            // 기상 정보를 HTML 요소에 삽입
            if (weatherData && temperatureData) {
                document.getElementById('weather-data').innerHTML = `
                    <p>날씨: ${weatherData}</p>
                    <p>온도: ${temperatureData}°C</p>
                `;
            } else {
                document.getElementById('weather-data').innerText = '기상 정보를 불러오는 중 문제가 발생했습니다.';
            }
        })
        .catch(error => {
            console.error('Error fetching weather data:', error);
            document.getElementById('weather-data').innerText = '기상 정보를 불러오는 중 오류가 발생했습니다.';
        });
}

// 페이지 로드 시 기상 정보를 불러옵니다.
window.onload = loadWeatherData;
