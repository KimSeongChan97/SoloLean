	<div id="result"></div>
	
	<script type="text/javascript">
		function calcDays() {
			const inputDate = prompt("연인과 만난 날을 입력하세요 (예: yyyy/mm/dd): ", "");
			const startDate = new Date(inputDate);
			const today = new Date();
			const timeDiff = today - startDate;
			const datsDiff = Math.floor(timeDiff / (1000*60*60*24));
			
			document.gerElementById('result').innerHTML = `오늘까지 우리는 ${daysDiff}일 이다.`;
		}
		
		window.onload = calcDays;
		
	</script>
