<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardSQL">
    
    <!-- 게시글 저장 -->
    <insert id="insertBoard" parameterType="board.bean.BoardDTO">
        INSERT INTO board (seq, id, name, email, subject, content, ref, lev, step, pseq, reply, hit, logtime)
        VALUES (#{seq}, #{id}, #{name}, #{email}, #{subject}, #{content}, #{ref}, #{lev}, #{step}, #{pseq}, #{reply}, #{hit}, #{logtime})
    </insert>

    <!-- 게시글 목록 조회 -->
    <select id="getBoardList" resultType="board.bean.BoardDTO">
        SELECT * FROM board ORDER BY ref DESC, step ASC
    </select>

    <!-- 특정 게시글 조회 -->
    <select id="getBoard" parameterType="int" resultType="board.bean.BoardDTO">
        SELECT * FROM board WHERE seq = #{seq}
    </select>

    <!-- 게시글 수정 -->
    <update id="updateBoard" parameterType="board.bean.BoardDTO">
        UPDATE board
        SET subject = #{subject}, content = #{content}, logtime = sysdate
        WHERE seq = #{seq}
    </update>

    <!-- 게시글 삭제 -->
    <delete id="deleteBoard" parameterType="int">
        DELETE FROM board WHERE seq = #{seq}
    </delete>

</mapper>