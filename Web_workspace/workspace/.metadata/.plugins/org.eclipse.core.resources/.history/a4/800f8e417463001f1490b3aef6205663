            padding: 0;
            margin: 0;
        }
        .title > a {
            display: block;
            padding-top: 12px;
            font-size: 14px;
            text-indent: 12px;
            text-decoration: none;
            font-weight: bold;
            color: white;
            height: 23px;
            background: url('../image/background.jpg');
        }
        .selected {
            background: url('../image/background-selected.jpg') !important;
        }
        .content {
            margin: 0;
            background: #D4D0C8;
            padding: 10px;
            height: 200px;
            overflow-y: auto;
        }
        
