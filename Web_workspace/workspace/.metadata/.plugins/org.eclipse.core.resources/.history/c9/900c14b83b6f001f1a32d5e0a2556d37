<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberSQL">
    
    <!-- 회원 등록 -->
    <insert id="insertMember" parameterType="member.bean.MemberDTO">
        INSERT INTO members (id, name, password, email)
        VALUES (#{id}, #{name}, #{password}, #{email})
    </insert>

    <!-- 특정 회원 조회 -->
    <select id="selectMember" parameterType="string" resultType="member.bean.MemberDTO">
        SELECT * FROM members WHERE id = #{id}
    </select>

    <!-- 모든 회원 조회 -->
    <select id="selectAllMembers" resultType="member.bean.MemberDTO">
        SELECT * FROM members
    </select>

    <!-- 회원 정보 업데이트 -->
    <update id="updateMember" parameterType="member.bean.MemberDTO">
        UPDATE members
        SET name = #{name}, password = #{password}, email = #{email}
        WHERE id = #{id}
    </update>

    <!-- 회원 삭제 -->
    <delete id="deleteMember" parameterType="string">
        DELETE FROM members WHERE id = #{id}
    </delete>

</mapper>