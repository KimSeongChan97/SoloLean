@charset "UTF-8";

/* body 스타일: 네온사인 느낌을 주는 배경 추가 */
body {
    margin: 0;
    padding: 0;
    background-color: #0a0a23 !important; /* 어두운 배경색 */
    background-image: url('/path/to/neon-background.png'); /* 네온사인 느낌의 배경 이미지 */
    background-size: cover;
    color: #d4a6ff;
    font-family: 'Comic Sans MS', sans-serif !important;
    text-align: center;
}

/* 테이블 중앙 정렬 및 네온사인 스타일 */
table {
    width: 600px;
    margin: 100px auto;
    border-collapse: collapse;
    padding: 20px;
    background-color: #1f1f3b; /* 어두운 네온 배경 */
    border-radius: 15px;
    box-shadow: 0 0 25px rgba(0, 255, 255, 0.7); /* 네온 블루 그림자 */
    color: #d4a6ff;
    text-align: center;
}

/* 테이블 셀 스타일 */
td {
    padding: 15px;
    vertical-align: middle;
    font-weight: bold;
    border-bottom: 1px solid #8de4ff;
}

/* 첫 번째 열(레이블) 스타일 */
td:first-child {
    width: 100px;
    text-align: right;
    padding-right: 20px;
    color: #ff46c7; /* 네온 핑크 레이블 */
}

/* 마지막 열(입력 필드) 스타일 */
td:last-child {
    text-align: left;
}

/* 두 열을 합친 셀 중앙 정렬 */
td[colspan="2"] {
    text-align: center;
}

/* 입력 필드 스타일 */
input[type="text"], input[type="password"], select {
    width: 80%;
    padding: 10px;
    border: 1px solid #8de4ff; /* 네온 블루 테두리 */
    border-radius: 8px;
    background-color: #14142f;
    color: #fff;
    text-align: center;
}

/* 버튼 스타일 */
input[type="button"], input[type="submit"], input[type="reset"] {
    width: 150px;
    padding: 15px;
    margin-top: 20px;
    background-color: #ff46c7;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
}

/* 버튼 hover 시 스타일 */
input[type="button"]:hover, input[type="submit"]:hover, input[type="reset"]:hover {
    background-color: #ffdb3d; /* 호버 시 네온 옐로우 */
}
