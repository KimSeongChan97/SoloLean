@charset "UTF-8";



/* 테이블 스타일 */@charset "UTF-8";

/* 테이블 스타일 */
table {
    width: 600px;
    border-collapse: collapse;
    margin: 50px auto;
    padding: 20px;
    box-shadow: 0 0 14px rgba(0, 0, 0, 0.9);
    background-color: #2e2e47 !important; /* 사이버펑크 느낌의 배경색 */
    color: #e0e0e0; /* 텍스트 색상을 연한 회색으로 */
}

/* 테이블 셀 스타일 */
td {
    padding: 10px;
    vertical-align: middle;
    font-weight: bold;
    color: #e0e0e0; /* 셀 안의 텍스트 색상 */
}

/* 첫 번째 열(레이블) 스타일 */
td:first-child {
    width: 100px;
    text-align: right;
    padding-right: 10px;
    color: #ff8e72; /* 네온사인 느낌의 텍스트 색상 */
}

/* 마지막 열(입력 필드) 스타일 */
td:last-child {
    text-align: left;
}

/* 두 열을 합친 셀(버튼들) 중앙 정렬 */
td[colspan="2"] {
    text-align: center;
}

/* 입력 필드 스타일 */
input[type="text"], input[type="password"], select {
    width: 75%;
    padding: 5px;
    border: 1px solid #b0b0ff; /* 필드 테두리를 연보라색으로 */
    border-radius: 4px;
    background-color: #fff; /* 입력 필드 배경색 */
    color: #000; /* 텍스트 색상 */
}

/* 버튼 스타일 */
input[type="button"], input[type="submit"], input[type="reset"] {
    width: 120px;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #601848; /* 버튼 테두리 색상 */
    border-radius: 4px;
    background-color: #601848; /* 네온사인 느낌의 버튼 배경색 */
    color: white;
    cursor: pointer;
}

/* 버튼 hover 시 스타일 */
input[type="button"]:hover, input[type="submit"]:hover, input[type="reset"]:hover {
    background-color: #ff8e72; /* 호버 시 네온사인 느낌의 밝은 배경색 */
}

table {
    width: 600px;
    border-collapse: collapse;
    border: 1px solid #ccc;
    margin: 50px auto;
    padding: 20px;
    box-shadow: 0 0 14px rgba(0, 0, 0, 0.9);
	background-color: #5A7D9A !important;
}

td {
    padding: 10px;
    vertical-align: middle;
    font-weight: bold;
}

td:first-child {
    width: 100px;
    text-align: right;
    padding-right: 10px;
}

td:last-child {
    text-align: left;
}

td[colspan="2"] {
    text-align: center;
}

input[type="text"], input[type="password"], select {
    width: 75%;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

input[type="button"], input[type="submit"], input[type="reset"] {
    width: 120px;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #f9f9f9;
    cursor: pointer;
}

input[type="button"]:hover, input[type="submit"]:hover, input[type="reset"]:hover {
    background-color: #ddd;
}
