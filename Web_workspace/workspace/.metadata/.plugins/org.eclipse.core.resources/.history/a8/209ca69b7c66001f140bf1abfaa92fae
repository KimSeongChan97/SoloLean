<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>

<%
    // 로그인 성공 시 (로그인 로직이 성공적으로 수행되었을 때 이 부분이 실행된다고 가정)
    session.setAttribute("username", "로그인한사용자이름");  // 여기에 실제 로그인한 사용자의 이름을 넣으세요.
    session.setAttribute("user", "로그인한사용자이메일");   // 여기에 실제 로그인한 사용자의 이메일을 넣으세요.

    // 세션에 저장된 값을 로그로 출력
    System.out.println("Username: " + session.getAttribute("username"));
    System.out.println("User Email: " + session.getAttribute("user"));

    // JSP 파일에서 세션 값을 가져오기
    String username = (String) session.getAttribute("username");
    String user = (String) session.getAttribute("user");

    // 세션 값이 제대로 설정되었는지 확인
    System.out.println("Username in session: " + username);
    System.out.println("User Email in session: " + user);

    // 만약 username과 user가 null이 아니면 정적 HTML 페이지로 리다이렉트
    if (username != null && user != null) {
        response.sendRedirect("mypage.html");
    } else {
        response.sendRedirect("login.html");
    }
%>
