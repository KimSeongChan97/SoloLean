<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="commentSQL">
    <!-- 댓글 추가 -->
    <insert id="addComment" parameterType="board.bean.CommentDTO">
        INSERT INTO comment (seq, board_seq, content, writer, logtime)
        VALUES (comment_seq.nextval, #{boardSeq}, #{content}, #{writer}, sysdate)
    </insert>

    <!-- 특정 게시글에 대한 댓글 가져오기 -->
    <select id="getComments" parameterType="int" resultType="board.bean.CommentDTO">
        SELECT * FROM comment WHERE board_seq = #{boardSeq}
    </select>

    <!-- 댓글 수정 -->
    <update id="updateComment" parameterType="board.bean.CommentDTO">
        UPDATE comment
        SET content = #{content}, writer = #{writer}
        WHERE seq = #{seq}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment" parameterType="int">
        DELETE FROM comment WHERE seq = #{seq}
    </delete>
</mapper>