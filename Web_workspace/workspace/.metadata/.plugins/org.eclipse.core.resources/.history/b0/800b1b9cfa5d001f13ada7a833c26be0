<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>NaN, ..</title>
</head>
<body>

<script type="text/javascript">
var a = Number("a");
document.write(" a = " + a + "<br>");
// NaN ( Not a Number ) : 숫자 형식이 아니다. 라는 에러 메시지

var sum = a + 1; // NaN + 1  -> 연산이 안됨
document.write("sum = " + sum + "<br>"); // NaN

var str = a + "str"; // 덧셈이 아닌 결합이다.
document.write("str = " + str + "<br>");





</script>
</body>
</html>