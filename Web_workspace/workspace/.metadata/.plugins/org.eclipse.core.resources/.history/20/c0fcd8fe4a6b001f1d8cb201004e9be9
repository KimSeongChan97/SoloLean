@charset "UTF-8";
/* 로그인 페이지 테이블 스타일 */
table {
    width: 400px;
    border-collapse: collapse;
    margin: 50px auto;
    padding: 20px;
    box-shadow: 0 0 14px rgba(0, 0, 0, 0.9);
}

/* 테이블 셀 스타일 */
td {
    padding: 10px;
    vertical-align: middle;
    font-weight: bold;
}

td:first-child {
    width: 100px;
    text-align: right;
    padding-right: 10px;
}

td:last-child {
    text-align: left;
}

td[colspan="2"] {
    text-align: center;
}

/* 입력 필드 스타일 */
input[type="text"], input[type="password"] {
    width: 75%;
    padding: 5px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
}

/* 버튼 스타일 */
input[type="submit"], input[type="button"] {
    width: 120px;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    background-color: #f9f9f9;
    cursor: pointer;
}

input[type="submit"]:hover, input[type="button"]:hover {
    background-color: #ddd;
}
