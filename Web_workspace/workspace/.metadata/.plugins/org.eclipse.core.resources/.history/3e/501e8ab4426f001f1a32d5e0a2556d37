<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="commentSQL">

    <!-- 댓글 작성 -->
    <insert id="addComment" parameterType="board.bean.CommentDTO">
        INSERT INTO comment (commentSeq, boardSeq, content, writer, logtime)
        VALUES (#{commentSeq}, #{boardSeq}, #{content}, #{writer}, sysdate)
    </insert>

    <!-- 특정 게시물에 달린 댓글 조회 -->
    <select id="getComments" parameterType="int" resultType="board.bean.CommentDTO">
        SELECT * FROM comment WHERE boardSeq = #{boardSeq} ORDER BY commentSeq ASC
    </select>

    <!-- 댓글 수정 -->
    <update id="updateComment" parameterType="board.bean.CommentDTO">
        UPDATE comment
        SET content = #{content}
        WHERE commentSeq = #{commentSeq}
    </update>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment" parameterType="int">
        DELETE FROM comment WHERE commentSeq = #{commentSeq}
    </delete>

</mapper>