}

ul.tab li a {
    background: url("../image/tab.jpg");
    display: block;
    color: #222;
    line-height: 40px;
    text-align: center;
    text-decoration: none;
}

ul.tab li a.selected {
    background: url("../image/tab_selected.jpg");
