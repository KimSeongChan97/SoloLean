<script type="text/javascript">
// 상수로 취급되기 때문에 재할당이 안된다, let 과 같은 구역 단위이다.
const a = 100; 
// a = 250;    // error
console.log(a) 

{
 
	const a = 200;
    console.log(a) 

    {
   
    	const a = 300;
        console.log(a) 

        {
   
            const a = 400;
            console.log(a)
        }

   
        console.log(a) 
    }

  
    console.log(a) 
}


console.log(a) 

</script>
