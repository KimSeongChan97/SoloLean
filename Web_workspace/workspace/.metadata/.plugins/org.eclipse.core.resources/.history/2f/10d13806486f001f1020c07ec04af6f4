package board.dao;

import java.io.IOException;
import java.io.Reader;
import java.util.List;
import java.util.Map;

import org.apache.ibatis.io.Resources;
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import org.apache.ibatis.session.SqlSessionFactoryBuilder;

import board.bean.BoardDTO;

public class BoardDAO {
    // 싱글톤 패턴으로 DAO 인스턴스를 관리하여, 하나의 객체만 사용되도록 보장합니다.
    private static BoardDAO boardDAO = new BoardDAO();

    // MyBatis에서 SQL 세션을 생성하고 관리하는 SqlSessionFactory 객체
    private SqlSessionFactory sqlSessionFactory;

    // 생성자에서 MyBatis 설정 파일을 읽고 SqlSessionFactory를 초기화합니다.
    public BoardDAO() {
        try {
            // mybatis-config.xml 설정 파일을 읽어와 SqlSessionFactory 객체를 생성합니다.
            Reader reader = Resources.getResourceAsReader("mybatis-config.xml");
            sqlSessionFactory = new SqlSessionFactoryBuilder().build(reader);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // 싱글톤 인스턴스를 반환하는 메소드
    public static BoardDAO getInstance() {
        return boardDAO;
    }

    // 전체 게시글 수를 가져오는 메소드입니다.
    public int getTotalPosts() {
        SqlSession sqlSession = sqlSessionFactory.openSession(); // SQL 세션을 열고
        int totalPosts = 0;
        try {
            totalPosts = sqlSession.selectOne("boardSQL.getTotalPosts"); // 쿼리 실행
        } finally {
            sqlSession.close(); // 세션 닫기
        }
        return totalPosts;
    }

    // 게시글 리스트를 페이징 처리하여 가져오는 메소드입니다.
    public List<BoardDTO> getBoardList(Map<String, Integer> map) {
        SqlSession sqlSession = sqlSessionFactory.openSession();
        List<BoardDTO> list = null;
        try {
            list = sqlSession.selectList("boardSQL.getBoardList", map); // 페이지 범위에 따른 게시글 가져오기
        } finally {
            sqlSession.close();
        }
        return list;
    }

    // 특정 게시글을 가져오는 메소드입니다.
    public BoardDTO getBoard(int seq) {
        SqlSession sqlSession = sqlSessionFactory.openSession();
        BoardDTO boardDTO = null;
        try {
            boardDTO = sqlSession.selectOne("boardSQL.getBoard", seq); // 해당 게시글 번호로 게시글 조회
        } finally {
            sqlSession.close();
        }
        return boardDTO;
    }

    // 게시글을 작성하는 메소드입니다.
    public void writeBoard(BoardDTO boardDTO) {
        SqlSession sqlSession = sqlSessionFactory.openSession();
        try {
            sqlSession.insert("boardSQL.writeBoard", boardDTO); // 게시글을 데이터베이스에 삽입
            sqlSession.commit(); // 트랜잭션 커밋
        } finally {
            sqlSession.close();
        }
    }

    // 게시글을 수정하는 메소드입니다.
    public void updateBoard(BoardDTO boardDTO) {
        SqlSession sqlSession = sqlSessionFactory.openSession();
        try {
            sqlSession.update("boardSQL.updateBoard", boardDTO); // 게시글 수정
            sqlSession.commit(); // 트랜잭션 커밋
        } finally {
            sqlSession.close();
        }
    }

    // 게시글을 삭제하는 메소드입니다.
    public void deleteBoard(int seq) {
        SqlSession sqlSession = sqlSessionFactory.openSession();
        try {
            sqlSession.delete("boardSQL.deleteBoard", seq); // 게시글 삭제
            sqlSession.commit(); // 트랜잭션 커밋
        } finally {
            sqlSession.close();
        }
    }
}
