<script type="text/javascript">
function getKeyName(keycode) {
	//JSON 객체 배열
	let keyMap = [
		{ code: 8, name: "backspace" },
		{ code: 9, name: "tab" },
		{ code: 13, name: "enter" },
		{ code: 16, name: "shift" },
		{ code: 17, name: "ctrl" },
		{ code: 18, name: "alt" },
		{ code: 19, name: "pausebreak" },
		{ code: 20, name: "capslock" },
		{ code: 21, name: "han/eng" }, // 결과 안나온다
		{ code: 25, name: "hanja" },
		{ code: 27, name: "esc" },
		{ code: 65, name: "A" },
		{ code: 97, name: "a" }
	]; // 배열 설정
	
	for(let i=0; i<keyMap.length; i++) {
		if(keyMap[i].code == KeyCode) return keyMap[i].name
	}
	
}

$(function(){
	
	
});
</script>
