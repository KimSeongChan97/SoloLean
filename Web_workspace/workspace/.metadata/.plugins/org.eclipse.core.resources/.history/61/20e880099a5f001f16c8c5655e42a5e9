<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>연인과의 날짜 계산</title>
</head>
<body onload="insertDate()">

    <h1>오늘의 날짜: <span id="Today"></span></h1>
    <h1>우리가 만난 날: <span id="metDate"></span></h1>
    <h1>오늘까지 우리는 <span id="Since"></span>일이다.</h1>

<script type="text/javascript">

function insertDate() {
    let year = parseInt(prompt("우리가 만난 년도는?"));
    while (isNaN(year) || year < 2000) {
        alert("2000년 이후로 입력해주세요");
        year = parseInt(prompt("우리가 만난 년도는?"));
    }

    let month = parseInt(prompt("우리가 만난 달은?"));
    while (isNaN(month) || month < 1 || month > 12) {
        alert("1부터 12 사이로 입력해주세요");
        month = parseInt(prompt("우리가 만난 달은?"));
    }

    let date = parseInt(prompt("우리가 만난 일은?"));
    while (isNaN(date) || date < 1 || date > 31) {
        alert("1부터 31 사이로 입력해주세요");
        date = parseInt(prompt("우리가 만난 일은?"));
    }

    
    document.getElementById("metDate").innerHTML = `${year}년 ${month}월 ${date}일`;

    
    var metDate = new Date(year, month - 1, date); //let에서 가져옴
    var today = new Date();
   
    var since = today - metDate; 
    
    if (since<0){
       alert("날짜를 다시 입력해주세요");
       insertDate();
    }
    
   
       
    var day = Math.floor(since /86400000); 
   
      

    document.getElementById("Since").innerHTML = day;

  
    document.getElementById("Today").innerHTML = today.toLocaleString();
}

</script>

</body>
</html>