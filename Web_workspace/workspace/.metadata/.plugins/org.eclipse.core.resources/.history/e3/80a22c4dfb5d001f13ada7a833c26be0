<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>NaN, ..</title>
</head>
<body>

<script type="text/javascript">
var a = Number("a");
document.write(" a = " + a + "<br>");
// NaN ( Not a Number ) : 숫자 형식이 아니다. 라는 에러 메시지

var sum = a + 1; // NaN + 1  -> 연산이 안됨
document.write("sum = " + sum + "<br>"); // NaN

var str = a + "str"; // 덧셈이 아닌 결합이다.
document.write("str = " + str + "<br>"); // NaNstr
document.write("<br>");

var v1 = "가나다라";
var v2 = "12345";

var is_num1 = ! isNaN(v1); // v1은 숫자의 형식이 아닙니까? -> true 를 부정하는 것이므로 답은 false

var is_num2 = ! isNaN(v2); // v2은 숫자의 형식이 아닙니까? -> false 를 부정하는 것이므로 답은 true

if (is_num1)		
	document.write(v1 + " 은(는) 숫자 입니다. <br>");
else 
	document.write(v1 + " 은(눈) 숫자가 아닙니다. <br>");
	


</script>
</body>
</html>