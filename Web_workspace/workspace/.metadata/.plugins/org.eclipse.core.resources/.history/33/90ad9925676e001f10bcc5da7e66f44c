$(function(){
	$('#boardWriteBtn').click(function(event){
		event.preventDefault(); // 폼의 기본 제출 동작을 막습니다.
		
		// 제목과 내용을 초기화합니다.
		$('#subjectDiv').empty();
		$('#contentDiv').empty();
		
		// 입력된 제목과 내용을 확인하고, 비어 있으면 경고 메시지를 보여줍니다.
		if($('#subject').val() == '')
			$('#subjectDiv').html('제목을 입력해주세요');
		else if($('#content').val() == '')
			$('#contentDiv').html('내용을 입력해주세요');
		else {
			// AJAX 요청을 통해 데이터를 서버에 전송합니다.
			$.ajax({
				type: 'post', // 'tpye' 오타 수정
				url: 'boardWrite_lean.jsp',
				data: {
					'subject': $('#subject').val(),
					'content': $('#content').val()
				},
				success: function(){
					alert("글쓰기가 완료되었습니다.");
					location.href = "boardList_lean.jsp"; // 글쓰기 완료 후 리스트 페이지로 이동
				},
				error: function(e) {
					console.log(e);  // 에러 발생 시 콘솔에 출력
				}
			});
		}
	});
});
