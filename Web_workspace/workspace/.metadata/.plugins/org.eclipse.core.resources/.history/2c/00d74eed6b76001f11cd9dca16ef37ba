}

/* 활성화된 페이지 버튼 */
.pagination-container .active {
    background-color: #00FFFF;
    color: #000000; /* 활성화된 페이지는 검은색 글씨 */
}

/* 버튼에 마우스 오버 시 */
.pagination-container a:hover {
    background-color: #00FF9C; /* 마우스 오버 시 네온 그린 */
