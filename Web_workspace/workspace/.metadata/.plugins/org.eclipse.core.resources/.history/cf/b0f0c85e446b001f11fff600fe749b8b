<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>로그인 페이지</title>
<link rel="stylesheet" type="text/css" href="/projectJSP/css/logincss.css"> <!-- CSS 파일 링크 -->
</head>
<body>

<jsp:include page="/projectJSP/jsp/nav.jsp" /> <!-- 네비게이션 바를 포함 -->

<h2 align="center">로그인</h2>
<hr/>

<div>
<form name="loginForm" method="post" action="/projectJSP/member/memberLogin.jsp">
    <table align="center">
        <!-- 아이디 입력 필드 -->
        <tr>
            <td>아이디</td>
            <td>
                <input type="text" name="id" placeholder="아이디 입력" />
                <div id="loginDiv" style="color: red;"></div> <!-- 아이디 오류 메시지 -->
            </td>
        </tr>
        <!-- 비밀번호 입력 필드 -->
        <tr>
            <td>비밀번호</td>
            <td>
                <input type="password" name="pwd" placeholder="비밀번호 입력" />
                <div id="loginpwdDiv" style="color: red;"></div> <!-- 비밀번호 오류 메시지 -->
            </td>
        </tr>

        <!-- 로그인 버튼 -->
        <tr>
            <td colspan="2" align="center">
                <input type="submit" value="로그인" />
                <input type="button" value="회원가입" onclick="window.location.href='/projectJSP/member/memberWriteForm.jsp';" />
            </td>
        </tr>
    </table>
</form>
</div>

<script>
    // 유효성 검사 함수
    function validateLoginForm() {
        var id = document.loginForm.id.value.trim();
        var pwd = document.loginForm.pwd.value.trim();
        var isValid = true;

        // 오류 메시지 초기화
        document.getElementById("loginDiv").innerHTML = "";
        document.getElementById("loginpwdDiv").innerHTML = "";

        if (id === "") {
            document.getElementById("loginDiv").innerHTML = "아이디를 입력하세요.";
            isValid = false;
        }
        if (pwd === "") {
            document.getElementById("loginpwdDiv").innerHTML = "비밀번호를 입력하세요.";
            isValid = false;
        }

        return isValid;
    }

    // 폼이 제출될 때 유효성 검사를 진행
    document.loginForm.onsubmit = function() {
        return validateLoginForm();
    };
</script>

</body>
</html>
