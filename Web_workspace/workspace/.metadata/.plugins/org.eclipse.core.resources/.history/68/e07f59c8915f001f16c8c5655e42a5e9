<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>로또 번호 생성기</title>
    <style>
        /* 로또 번호가 표시될 원형 디자인 스타일 */
        .lotto-number {
            display: inline-block; /* div 요소가 수평으로 배치되도록 함 */
            width: 40px; /* 원형의 너비 */
            height: 40px; /* 원형의 높이 */
            line-height: 40px; /* 텍스트가 원형 안에서 수직으로 가운데 오도록 함 */
            text-align: center; /* 텍스트를 중앙에 정렬 */
            border-radius: 50%; /* 요소를 원형으로 만듦 */
            background-color: lightblue; /* 기본 배경색 */
            color: white; /* 텍스트 색상 */
            margin: 5px; /* 요소 간의 간격 */
            font-size: 20px; /* 텍스트 크기 */
            font-weight: bold; /* 텍스트를 굵게 설정 */
        }

        /* 첫 세 개의 로또 번호는 파란색 배경 */
        .blue { background-color: #4363d8; }

        /* 다음 두 개의 로또 번호는 주황색 배경 */
        .orange { background-color: #f58231; }

        /* 마지막 로또 번호는 회색 배경 */
        .gray { background-color: #808080; }
    </style>
</head>
<body>
    <h1>로또 번호 생성기</h1>

    <!-- 로또 번호가 표시될 영역 -->
    <div id="lotto"></div>

    <script>
        // 로또 번호를 생성하는 함수
        function generateLotto() {
            // Set 객체를 사용하여 중복이 없는 로또 번호를 저장
            const lottoNumbers = new Set();

            // 중복되지 않은 6개의 로또 번호가 나올 때까지 반복
            while (lottoNumbers.size < 6) {
                // 1부터 45 사이의 난수 생성
                // Math.random()은 0 이상 1 미만의 값을 반환하므로 45를 곱하고 1을 더해 1~45 범위로 맞춤
                const number = Math.floor(Math.random() * 45) + 1;

                // Set 객체에 번호 추가 (중복되면 자동으로 추가되지 않음)
                lottoNumbers.add(number);
            }

            // Set 객체에 저장된 번호들을 배열로 변환 (Set은 순서를 보장하지 않으므로 배열로 변환 필요)
            const lottoArray = Array.from(lottoNumbers);

            // 번호를 오름차순으로 정렬
            // 배열의 sort 메소드는 두 값을 비교해 작은 값이 앞으로 오도록 정렬함
            lottoArray.sort((a, b) => a - b);

            // 로또 번호를 출력할 HTML 요소를 가져옴
            const lottoContainer = document.getElementById('lotto');

            // 생성된 로또 번호들을 화면에 출력하는 부분
            // forEach를 사용해 배열의 각 요소에 대해 반복
            lottoArray.forEach((num, index) => {
                // 각 번호에 해당하는 div 요소를 생성
                const lottoBall = document.createElement('div');

                // 생성된 div에 'lotto-number' 클래스를 추가해 스타일을 적용
                lottoBall.classList.add('lotto-number');

                // 번호의 인덱스에 따라 색상을 다르게 지정
                // 첫 세 개의 번호는 파란색, 그 다음 두 개는 주황색, 마지막 하나는 회색으로 설정
                if (index < 3) {
                    lottoBall.classList.add('blue');
                } else if (index < 5) {
                    lottoBall.classList.add('orange');
                } else {
                    lottoBall.classList.add('gray');
                }

                // 생성된 번호를 div 내부에 텍스트로 추가
                lottoBall.innerText = num;

                // 완성된 div 요소를 로또 번호를 출력할 컨테이너에 추가
                lottoContainer.appendChild(lottoBall);
            });
        }

        // 페이지가 완전히 로드되면 로또 번호를 생성하는 함수를 실행
        // window.onload는 웹 페이지가 모두 로드된 후 함수를 실행하도록 설정함
        window.onload = generateLotto;
    </script>
</body>
</html>
