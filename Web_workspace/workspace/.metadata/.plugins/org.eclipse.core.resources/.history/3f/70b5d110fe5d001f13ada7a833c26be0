<script type="text/javascript">

var user_id = prompt("아이디를 입력하세요.", "hong"); // 기본값 block : hong

if(user_id != ""){ // ""은 아무 값이며, 값이 안들어 왔다면, 조건이 맞지 않아 끝나버림.
	alert("안녕하세요. " + user_id + " 님 ");
	if(confirm("정말 로그아웃 하시겠습니까?")) {
		alert("로그아웃 되었습니다.");
	} else {
		alert("로그아웃 취소 되었습니다.");
	}
}
// alert 은 프로그램이 종료 되기 때문에 modal? 모달? 로 변경하여 사용하길 권장한다고 한다.

		

</script>
</body>
