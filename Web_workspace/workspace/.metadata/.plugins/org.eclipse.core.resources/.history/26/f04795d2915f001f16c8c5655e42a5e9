<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>로또 번호 생성기</title>
    <style>
        .lotto-number {
            display: inline-block;
            width: 40px;
            height: 40px;
            line-height: 40px;
            text-align: center;
            border-radius: 50%;
            background-color: lightblue;
            color: white;
            margin: 5px;
            font-size: 20px;
            font-weight: bold;
        }

        .blue { background-color: #4363d8; }

        .orange { background-color: #f58231; }

        .gray { background-color: #808080; }
        
        #lotto {
        	color: aliceblue;	
        }
        
    </style>
</head>
<body>
    <h1>로또 번호 생성기</h1>
    <div id="lotto"></div>

    <script>
        function generateLotto() {
            const lottoNumbers = new Set();

            while (lottoNumbers.size < 6) {
                const number = Math.floor(Math.random() * 45) + 1;
                lottoNumbers.add(number);
            }

            const lottoArray = Array.from(lottoNumbers);
            lottoArray.sort((a, b) => a - b);

            const lottoContainer = document.getElementById('lotto');

            lottoArray.forEach((num, index) => {
                const lottoBall = document.createElement('div');
                lottoBall.classList.add('lotto-number');

                if (index < 3) {
                    lottoBall.classList.add('blue');
                } else if (index < 5) {
                    lottoBall.classList.add('orange');
                } else {
                    lottoBall.classList.add('gray');
                }

                lottoBall.innerText = num;
                lottoContainer.appendChild(lottoBall);
            });
        }

        window.onload = generateLotto;
    </script>
</body>
</html>
