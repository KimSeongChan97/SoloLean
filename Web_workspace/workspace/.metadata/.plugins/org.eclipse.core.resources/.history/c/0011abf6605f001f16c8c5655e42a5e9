<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>연습문제, 3의 배수 찾기 다른 답안</title>
</head>
<body>

	<h1>3의 배수 찾기</h1>
	
	<script type="text/javascript">
		// 사용자에게 몇까지 3의 배수를 찾을지 입력을 받음
		// prompt 함수를 통해 입력받고, 이 값은 문자열로 반환됨
		let num = prompt("몇 까지 3의 배수를 찾는가?"); 
		
		let count = 0; // 3의 배수의 갯수를 저장할 변수 (초기값 0)
		let sum = 0;   // 3의 배수들의 합을 저장할 변수 (초기값 0)
		
		// 사용자가 입력을 취소하지 않고 숫자를 입력한 경우에만 실행
		if (num != null) {
			// 1부터 num까지의 숫자 중 3의 배수를 찾기 위해 반복문 실행
			// i는 1부터 시작하여 num까지 증가하면서 반복
			for (let i = 1; i <= num; i++) {
				// i를 3으로 나눈 나머지가 0이면 3의 배수임
				if (i % 3 == 0) {
					count++; // 3의 배수를 찾을 때마다 count 값을 1씩 증가
					sum += i; // 3의 배수인 i 값을 sum에 더하여 합산
					// document.write를 사용하여 3의 배수를 화면에 출력
					// 각 3의 배수는 쉼표와 함께 출력
					document.write(i + ", ");
				}
			} // for
			// 두 줄 공백을 추가하기 위해 <br> 태그를 사용
			document.write("<br><br>");
			// 3의 배수의 갯수를 출력
			// 텍스트 색상을 빨간색으로 지정
			document.write("<div><font color='red'>" + num + "까지 3의 배수의 갯수 : " + count + "</font></div>");
			// 3의 배수의 합을 출력
			// 텍스트 색상을 파란색으로 지정
			document.write("<div><font color='blue'>" + num + "까지 3의 배수의 합 : " + sum + "</font></div>");
		} // if
	</script>
</body>
</html>
