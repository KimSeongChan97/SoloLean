    <script>
        // Weatherbit API 호출
        async function fetchWeather() {
            const apiKey = '5233d140772d45ceb3ec91756afa4e7'; // 발급받은 API 키로 대체
            const url = `https://api.weatherbit.io/v2.0/current?lat=37.5665&lon=126.9780&key=${apiKey}`;

            try {
                const response = await fetch(url);
                const data = await response.json();

                const weatherDescription = data.data[0].weather.description;
                const temperature = data.data[0].temp;

                document.getElementById('weather-data').textContent =
                    `현재 기온: ${temperature}°C, 날씨: ${weatherDescription}`;
            } catch (error) {
                document.getElementById('weather-data').textContent =
                    '날씨 정보를 가져오는 데 실패했습니다.';
                console.error('Error fetching weather data:', error);
            }
        }

        fetchWeather(); // 페이지 로드 시 날씨 정보를 가져옴
    </script>

    <!-- Bootstrap JS -->
