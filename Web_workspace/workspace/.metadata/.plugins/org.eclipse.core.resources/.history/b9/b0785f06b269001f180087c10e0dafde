package com.example.servlet;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/guestbookServlet/deleteAccount")
public class DeleteAccountServlet extends HttpServlet {
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        response.setContentType("application/json");
        PrintWriter out = response.getWriter();

        try {
            // JSON 데이터를 파싱하여 memberId를 가져옴
            StringBuilder sb = new StringBuilder();
            BufferedReader reader = request.getReader();
            String line;
            while ((line = reader.readLine()) != null) {
                sb.append(line);
            }

            JSONObject jsonObject = new JSONObject(sb.toString());
            int memberId = jsonObject.getInt("memberId");

            // 데이터베이스에서 해당 회원을 삭제하는 로직
            boolean isDeleted = deleteMemberFromDatabase(memberId); // 이 메서드는 회원 삭제 로직을 구현한 메서드

            if (isDeleted) {
                out.print("{\"success\":true}");
            } else {
                out.print("{\"success\":false}");
            }
        } catch (Exception e) {
            e.printStackTrace();
            out.print("{\"success\":false}");
        } finally {
            out.flush();
            out.close();
        }
    }

    private boolean deleteMemberFromDatabase(int memberId) {
        // DB 연결 및 삭제 로직 구현
        // 예시: DELETE FROM Members WHERE memberId = ?;
        return true; // 성공 시 true 반환
    }
}
