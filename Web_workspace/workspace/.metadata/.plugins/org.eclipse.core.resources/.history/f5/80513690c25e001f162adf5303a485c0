/*

 //클래스 선언
public class Calc {
	//변수 추가
	public int x = 0;
	public int y = 0;
	// 메서드
	public void setValue(int x, int y) {
		this.x = x;
		this.y = y;
	}
	public void plus() {
		return x + y;
	}
	public void minus() {
		return x - y;
	}
	public void result() {
		int sum = plus();
		int sub = minus();
		
		System.out.println("덧셈 = " + sum);
		System.out.println("뺄셈 = " + sub);
	}
}

//객체 생성
Calc calc = new Calc(); -> var calc = {}
calc.x = 25;

*/

// 먼저, 빈 객체로 생성
var calc = {}

// 멤버변수(필드) 추가
calc.x = 0;
calc.y = 0;

// 멤버함수(메서드) 추가
calc.setValue = function(x, y) {
	this.x = x;
	this.y = y;
}

calc.plus = function() {
	let sum = this.x + this.y;
	return sum;
}

calc.minus = function() {
	let sub = this.x - this.y;
	return sub; 
}

calc.result = function() {
	let sum = this.plus();
	let sub = this.minus();
	
	console.log("덧셈 = " + sum);
	console.log("뺄셈 = " + sub);
	
}



