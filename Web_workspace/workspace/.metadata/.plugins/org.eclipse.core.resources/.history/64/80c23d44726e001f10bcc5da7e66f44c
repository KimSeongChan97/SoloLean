@charset "UTF-8";

/* 전체 배경 설정 */
body {
    background-color: #0a0a23 !important; /* 배경색을 어두운 파랑색으로 설정하여 전체적인 테마를 구성 */
    font-family: 'Comic Sans MS', sans-serif !important; /* 전체 폰트를 Comic Sans로 지정하여 귀여운 느낌을 줌 */
    color: #d4a6ff; /* 텍스트 색상을 밝은 연보라색으로 지정 */
    width: 100%; /* body의 너비를 100%로 설정 */
    margin: 0 auto; /* 상하좌우 여백 없이 중앙 정렬 */
}

/* 테이블 스타일 */
table {
    width: 800px; /* 테이블 너비를 800px로 고정 */
    margin: 50px auto; /* 테이블을 중앙에 배치하고 위아래 여백을 50px 줌 */
    border-collapse: collapse; /* 테이블의 셀 사이에 여백을 제거하여 깔끔하게 보이게 함 */
    background-color: #1f1f3b; /* 테이블 배경색을 짙은 보라색으로 설정 */
    box-shadow: 0px 0px 20px rgba(255, 69, 217, 0.7); /* 네온 핑크색 그림자를 추가하여 테이블을 부각 */
    border-radius: 10px; /* 테이블의 모서리를 둥글게 만듦 */
    color: #d4a6ff; /* 테이블 텍스트 색상을 연보라색으로 설정 */
}

/* 테이블 헤더 스타일 */
th {
    background-color: #ff46c7; /* 헤더의 배경색을 밝은 핑크색으로 설정 */
    color: #fff; /* 헤더 텍스트 색상을 흰색으로 설정 */
    padding: 15px; /* 헤더 안의 내용을 15px 여백을 줘서 시각적으로 여유 있게 보이게 함 */
    border: 1px solid #ff77ea; /* 헤더의 테두리를 네온 핑크로 설정 */
    text-align: center; /* 헤더 텍스트를 가운데 정렬 */
}

/* 테이블 셀 스타일 */
td {
    padding: 15px; /* 셀 안에 있는 텍스트에 15px 여백을 추가 */
    text-align: center; /* 셀 안의 텍스트를 가운데 정렬 */
    border: 1px solid #333; /* 셀의 테두리를 어두운 회색으로 설정 */
}

/* 제목 링크 스타일 */
a {
    color: #8de4ff; /* 링크 색상을 밝은 파란색으로 설정 */
    text-decoration: none; /* 링크에서 밑줄 제거 */
}

a:hover {
    color: #ff46c7; /* 마우스를 올리면 핑크색으로 변경 */
}

/* h2 제목 스타일 */
h2 {
    cursor: pointer; /* 제목을 클릭할 수 있는 커서로 변경 */
    text-align: center; /* 제목을 가운데 정렬 */
    color: #ffdb3d; /* 제목 텍스트 색상을 노란색으로 설정 */
}

/* pagination-nav 클래스 스타일 정의 (기존 navbar와 충돌 방지) */
.pagination-nav {
    margin-bottom: 40px;
    width: fit-content; /* 페이지네이션 너비를 버튼 내용에 맞게 설정 */
}

.pagination-nav .pagination {
    background-color: #1f1f3b;  /* 테이블 배경과 동일한 색상 */
    border-radius: 20px;  /* 페이지네이션 바 전체를 둥글게 */
    box-shadow: 0 0 10px rgba(255, 69, 217, 0.5);  /* 네온 핑크색 그림자 */
    padding: 5px;  /* 페이지네이션 바 내부 여백 */
    display: flex;  /* 버튼을 한 줄로 배치 */
    justify-content: center;  /* 버튼을 가운데 정렬 */
}

.pagination-nav .pagination .page-link {
    color: #8de4ff;  /* 링크 기본 색상 */
    border: 1px solid #ff46c7;  /* 네온 핑크색 테두리 */
    padding: 10px 15px;  /* 버튼의 내부 여백 */
    margin: 0 5px;  /* 버튼 사이 간격 */
    border-radius: 8px;  /* 각 버튼의 테두리 둥글게 */
    transition: background-color 0.3s, color 0.3s;
}

.pagination-nav .pagination .page-link:hover {
    background-color: #ff46c7;  /* 호버 시 핑크색 배경 */
    color: #fff;  /* 호버 시 텍스트 흰색 */
}

.pagination-nav .pagination .active .page-link {
    background-color: #ff46c7;  /* 활성화된 페이지 버튼 배경 */
    color: #fff;
    border-color: #ff46c7;
    border-radius: 8px;  /* 활성화된 버튼에도 테두리 둥글게 */
}