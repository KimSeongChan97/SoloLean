@charset "UTF-8";

/* 기본 설정 - 페이지의 전반적인 텍스트 스타일과 배경색을 설정합니다. */
body {
    background-color: #0a0a23 !important; /* 어두운 배경색으로, 페이지의 기본 분위기를 설정합니다. */
    font-family: 'Comic Sans MS', sans-serif !important; /* 폰트 설정 - 전체 페이지에서 동일한 글꼴을 사용하도록 합니다. */
    color: #d4a6ff; /* 텍스트 색상은 연보라색으로 설정되어 네온 느낌을 줍니다. */
    text-align: center;
}

/* 메뉴 스타일링 */
#link {
    width: 300px; /* 메뉴의 폭을 고정하여 일관된 레이아웃을 제공합니다. */
    background-color: #1f1f3b; /* 메뉴 배경색을 어두운 파란색으로 설정합니다. */
    border-radius: 10px; /* 모서리를 둥글게 만들어 부드러운 느낌을 줍니다. */
    box-shadow: 0px 0px 20px rgba(0, 255, 255, 0.7); /* 네온 효과의 그림자 설정 */
    padding: 30px; /* 메뉴 내부의 여백을 설정하여 컨텐츠가 너무 꽉 차 보이지 않도록 합니다. */
    margin: 50px auto; /* 메뉴를 화면 중앙에 배치하고, 상단에 여백을 줍니다. */
    text-align: center; /* 텍스트를 중앙 정렬하여 일관된 디자인을 유지합니다. */
    color: #d4a6ff; /* 메뉴 내부의 텍스트 색상도 연보라색으로 설정합니다. */
}

/* 링크 스타일 - 네온 느낌의 링크 스타일을 적용합니다. */
#link h3 a {
    color: #8de4ff; /* 기본 링크 색상을 밝은 파란색으로 설정합니다. */
    text-decoration: none; /* 링크에 밑줄을 제거하여 깔끔하게 보이도록 합니다. */
}

/* 링크에 마우스를 올렸을 때 스타일 변화 */
#link h3 a:hover {
    color: #ff46c7; /* 링크 호버 시 네온 핑크로 변경됩니다. */
}

/* 네비게이션 토글 버튼의 바 스타일 */
.navbar-toggle .bar {
    background-color: #8de4ff; /* 네비게이션 토글 버튼의 바를 네온 파란색으로 설정하여 눈에 잘 띄도록 합니다. */
}
