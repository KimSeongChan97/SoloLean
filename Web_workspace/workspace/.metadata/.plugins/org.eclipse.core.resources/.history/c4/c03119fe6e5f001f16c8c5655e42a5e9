<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>배열-concat</title>
</head>
<body>

<script type="text/javascript">
	//concat : 배열 합치기, 새로운 배열이 생성, 원본은 변경X (변경할려면 concat으로 복사하고 복사본에 변경)
	let arr1 = [10, 20, 30];
	let arr2 = ["사과", "딸기", "바나나"];	
	let arr3 = arr1.concat(); // 복사본의 의미
	let arr4 = arr1.concat(arr2);
	
	console.log("arr1 = " + arr1);
	document.write("arr1 = " + arr1 + "<br>");
	document.write(`arr3 = ${arr3}<br>`);
	document.write(`arr4 = ${arr4}<br>`);
	document.write("<hr/>");
	
	//배열 요소 추가
	//push : 배열의 요소에 추가할 때 사용 됨 ( 뒤에다가 추가 )
	// push를 많이 사용한다.. (append 도 있긴 하다.)
	arr1.push(40);
	arr1.push(50);
	document.write(`arr1 = ${arr1}<br>`);
	
	arr2.push("복숭아", "수박");
	document.write(`arr2 = ${arr2}<br>`);
	
	document.write("<hr/>");
	
	//unshift : 배열의 요소에 추가할 때 사용 됨 ( 앞에다가 추가 )
	arr2.unshift("망고");
	document.write(`arr2 = ${arr2}<br>`);
	document.write("<hr/>");
	document.write("<hr/>");
	
	//배열 요소 꺼낸다
	//pop : 배열의 요소에 제거할 때 사용 됨 ( 뒤에다가 제거 )
	arr1.pop(); // 배열 요소 삭제
	document.write(`arr1 = ${arr1}<br>`); // 50 제거
	
	let num = arr1.pop(); // 배열 요소 꺼내서 num 에 저장
	document.write(`num = ${num}<br>`);
	document.write(`arr1 = ${arr1}<br>`);	
	document.write("<hr/>");
	
	//shift : 배열의 요소에 제거할 때 사용 됨 ( 뒤에다가 제거 )
	let str = arr2.shift(); 
	document.write(`str = ${str}<br>`);
	document.write(`arr2 = ${arr2}<br>`);
	document.write("<hr/>");
	document.write("<hr/>");
	
	//splice() : 배열 요소를 추가/삭제 하는 역할
	//			:  원본을 변경한다. 		
	let arr5 = arr2.splice(2); // splice(인덱스를 잡는다)
	document.write(`arr2 = ${arr2}<br>`);
	document.write(`arr5 = ${arr5}<br>`);
	
	let arr6 = arr5.splice(1, 1); // splice(인덱스, 개수) 
	document.write(`arr5 = ${arr5}<br>`);
	document.write(`arr6 = ${arr6}<br>`);
	
	let arr7 = arr5.splice(1, 0, "멜론"); // splice(인덱스, 개수, "추가")
	document.write(`arr5 = ${arr5}<br>`);
	document.write(`arr7 = ${arr7}<br>`); // 값이 안나오는 이유는 가져올게 없기 때문이다.
	
	document.write("<hr/>");
	// slice() : 배열 요소를 꺼내온다.
	//			: 원본을 변경하지 않는다.
	
	
	document.write("<hr/>");
	
</script>
</body>
</html>

