<script type="text/javascript">
$(function(){
	$('#user_id, #user_password').bind({
		'focus' : function(){
			$(this).addClass('active')
		},
		'blur' : function(){
			$(this).removeClass('active')
		}
	});
	
	
	
	
	
});
</script>
