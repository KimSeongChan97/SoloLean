bind 함수

$("요소").bind("이벤트", function() {
    ... 이벤트 처리 ...
});


$("요소").bind( "이벤트1 이벤트2 이벤트3", function() { //이벤트 이름을 공백으로 구분하여 여러개 지정
    ... 이벤트 처리 ...
});

$("요소").bind({
    "이벤트1" : function() { ... 이벤트 처리 ...},
    "이벤트2" : function() { ... 이벤트 처리 ...},
    "이벤트3" : function() { ... 이벤트 처리 ...}
});
