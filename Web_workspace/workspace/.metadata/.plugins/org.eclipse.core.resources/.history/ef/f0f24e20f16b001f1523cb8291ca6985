@charset "UTF-8";

/* 모든 요소에 기본 여백 및 패딩을 제거하고, 상자를 박스 크기 계산에 포함하도록 설정 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; /* box-sizing: border-box를 설정하면, 요소의 너비와 높이에 padding과 border를 포함하여 계산합니다. */
    font-family: 'Comic Sans MS', sans-serif; /* 폰트를 'Comic Sans MS'로 설정. */
}

/* 배경 설정 */
body {
    background-color: #5A7D9A !important; /* 배경색을 연한남색 으로 설정 */
}

/* 메뉴 스타일 */
#link {
    width: 300px; /* 너비 300px 설정 */
    background-color: #fff; /* 배경색을 흰색으로 설정 */
    border-radius: 10px; /* 모서리를 둥글게 처리 */
    box-shadow: 0 0 14px rgba(0, 0, 0, 0.9); /* 상자에 그림자 추가하여 입체감 부여 */
    padding: 30px; /* 내부 여백 30px 설정 */
    margin: 50px auto; /* 화면의 중앙에 위치하도록 상단 50px 여백을 주고 좌우 중앙 정렬 */
    text-align: center; /* 텍스트를 가운데 정렬 */
}

#link h3 {
    margin: 20px 0; /* 상하로 20px 여백 설정 */
    font-family: 'Comic Sans MS', sans-serif !important;
}

#link h3 a {
    text-decoration: none; /* 링크의 밑줄 제거 */
    font-size: 18px; /* 폰트 크기 18px 설정 */
    color: #333; /* 글자색을 어두운 회색으로 설정 */
    transition: color 0.3s ease; /* 마우스 오버 시 색상이 부드럽게 변경되도록 설정 */
}

#link h3 a:hover {
    color: #d4a6ff; /* 링크에 마우스를 올렸을 때 색상 */
    cursor: pointer; /* 마우스를 올렸을 때 손가락 모양으로 변경 */
}

/* 네비게이션 토글 버튼 스타일 */
.navbar-toggle {
    background-color: transparent; /* 배경을 투명하게 설정 */
    border: none; /* 테두리 제거 */
    cursor: pointer; /* 마우스 포인터를 손가락 모양으로 변경 */
}

/* 토글 버튼의 바(bar) 스타일 */
.navbar-toggle .bar {
    display: block;
    width: 25px; /* 바의 너비를 25px로 설정 */
    height: 3px; /* 바의 높이를 3px로 설정 */
    margin: 4px auto; /* 위아래로 4px의 간격을 추가하고 중앙 정렬 */
    background-color: #333; /* 바의 색상을 어두운 회색으로 설정 */
    transition: 0.4s; /* 변화가 0.4초 동안 부드럽게 일어나도록 설정 */
}

/* 토글 버튼이 열린 상태에서의 중간 바 스타일 */
.navbar-open .bar:nth-child(2) {
    opacity: 0; /* 중간 바를 숨김 */
}

/* 토글 버튼이 열린 상태에서 첫 번째 바의 스타일 */
.navbar-open .bar:nth-child(1) {
    transform: translateY(7px) rotate(45deg); /* 첫 번째 바를 45도 회전시킴 */
}

/* 토글 버튼이 열린 상태에서 세 번째 바의 스타일 */
.navbar-open .bar:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg); /* 세 번째 바를 -45도 회전시킴 */
}

/* 메뉴 리스트 스타일 */
.navbar-menu {
    position: fixed; /* 고정된 위치로 설정하여 스크롤 시에도 같은 위치에 유지 */
    top: 0;
    left: -100%; /* 처음에 메뉴를 화면 밖에 숨김 */
    width: 200px; /* 메뉴 너비를 200px로 설정 */
    height: 100%; /* 메뉴 높이를 100%로 설정하여 화면 전체를 덮음 */
    background-color: #3b3f58; /* 배경색을 어두운 회색으로 설정 */
    display: flex; /* 플렉스 박스를 사용하여 요소들을 중앙에 정렬 */
    justify-content: center;
    align-items: center;
    flex-direction: column; /* 세로로 아이템을 나열 */
    transition: 0.4s; /* 메뉴가 화면에 나타날 때 애니메이션을 부드럽게 표시 */
}

/* 메뉴 내 링크 스타일 */
.navbar-menu a {
    text-decoration: none; /* 밑줄 제거 */
    color: #fff; /* 링크 색상을 흰색으로 설정 */
    font-size: 18px; /* 폰트 크기를 18px로 설정 */
    padding: 10px; /* 내부 여백을 10px로 설정 */
    transition: color 0.3s; /* 마우스 오버 시 색상이 0.3초 동안 부드럽게 변경되도록 설정 */
}

/* 링크에 마우스를 올렸을 때 스타일 */
.navbar-menu a:hover {
    color: #007bff; /* 파란색으로 변경 */
}

/* 메뉴가 열렸을 때 위치 설정 */
.navbar-open .navbar-menu {
    right: 0; /* 메뉴가 화면 왼쪽에서 보이도록 설정 */
}
