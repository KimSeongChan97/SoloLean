<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Index 페이지</title>
<style type="text/css">
body {
	background-color: #0d0d0d;
	color: #00ffcc;
	text-align: center;
	margin-top: 90px;
	/* 전체 배경색을 어두운 색(#0d0d0d)으로 설정하고, 텍스트는 밝은 청록색(#00ffcc)으로 설정 */
	/* 화면의 상단에서 90px 떨어진 곳에 내용을 배치하여 가운데 정렬 효과를 줌 */
}
</style>
</head>
<body>
<h2>메인화면</h2>
<!-- 페이지 상단에 메인화면 제목을 표시 -->

Context = ${ pageContext.request.contextPath }
<!-- JSP 내장 객체인 pageContext를 사용해 현재 웹 애플리케이션의 컨텍스트 경로를 출력 -->
<!-- 예: /memberMVC (컨텍스트 경로는 프로젝트의 루트 경로를 가리킴) -->

<c:set var="context" value="${ pageContext.request.contextPath }" />
<!-- JSP의 JSTL <c:set> 태그를 사용하여 컨텍스트 경로를 "context"라는 변수에 저장 -->
<!-- 이후의 경로 설정을 간편하게 하기 위해 사용 -->

<c:if test="${sessionScope.memId == null }">
	<!-- sessionScope.memId가 null일 때(즉, 로그인이 되어 있지 않을 때) 실행되는 조건문 -->
	<!-- 사용자가 로그인하지 않은 경우 회원가입 및 로그인 링크를 보여줌 -->

	<h3><a href="${context }/member/writeForm.do">회원가입</a></h3>
	<!-- 회원가입 링크. writeForm.do는 회원가입 페이지로 연결됨 -->
	<h3><a href="${context }/member/loginForm.do">로그인</a></h3>
	<!-- 로그인 링크. loginForm.do는 로그인 페이지로 연결됨 -->
</c:if> 	

<c:if test="${sessionScope.memId != null }">
	<!-- sessionScope.memId가 null이 아닐 때(즉, 사용자가 로그인한 상태일 때) 실행되는 조건문 -->
	<!-- 로그인된 사용자가 사용할 수 있는 기능(로그아웃, 회원정보수정, 글쓰기)을 제공 -->

	<h3><a href="${context }/member/logout.do">로그아웃</a></h3>
	<!-- 로그아웃 링크. logout.do는 로그아웃 처리 후 메인 페이지로 돌아오게 설정됨 -->
	<h3><a href="${context }/member/updateForm.do">회원정보수정</a></h3>
	<!-- 회원정보 수정 링크. updateForm.do는 사용자 정보 수정 페이지로 연결됨 -->
	<h3><a href="${context }/board/boardWriteForm.do">글쓰기</a></h3>
	<!-- 게시판 글쓰기 링크. boardWriteForm.do는 글 작성 페이지로 연결됨 -->
</c:if> 	

<h3><a href="${context }/board/boardList.do?pg=1">목록</a></h3>
<!-- 게시판 목록 링크. pg=1은 페이지 번호를 의미하며, 게시판의 첫 번째 페이지로 이동 -->
</body>
</html>


