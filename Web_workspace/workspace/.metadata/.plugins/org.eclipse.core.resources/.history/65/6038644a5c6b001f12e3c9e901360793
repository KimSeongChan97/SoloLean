@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');
/* 모든 요소에 기본 여백 및 패딩을 제거하고, 상자를 박스 크기 계산에 포함 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif; /* 폰트를 'Poppins'로 설정 */
}

body {
    display: flex; /* 플렉스 박스를 사용하여 중앙 정렬 */
    justify-content: center;
    align-items: center;
    min-height: 100vh; /* 최소 높이를 100vh(뷰포트의 높이 100%)로 설정 */
    background: #06021b; /* 배경색을 어두운 네이비 색상으로 설정 */
}

/* 네비게이션 바의 전체 스타일 */
.navigation {
    position: relative;
    width: 400px; /* 네비게이션 바의 너비를 400px로 설정 */
    height: 70px; /* 네비게이션 바의 높이를 70px로 설정 */
    background: linear-gradient(45deg, #2196f3, #e91e63); /* 파란색과 빨간색의 그라데이션 적용 */
    display: flex; /* 플렉스 박스를 사용하여 아이템을 중앙에 정렬 */
    justify-content: center;
    align-items: center;
    border-radius: 10px; /* 테두리 모서리를 둥글게 처리 */
}

/* 네비게이션 바의 리스트 스타일 */
.navigation ul {
    display: flex; /* 리스트를 가로로 정렬 */
    width: 350px; /* 리스트 전체의 너비를 350px로 설정 */
}

.navigation ul li {
    position: relative;
    width: 70px; /* 각 리스트 아이템의 너비를 70px로 설정 */
    height: 70px; /* 각 리스트 아이템의 높이를 70px로 설정 */
    list-style: none; /* 리스트 스타일(기본 점)을 제거 */
    z-index: 1;
}

/* 리스트 내 링크 스타일 */
.navigation ul li a {
    position: relative;
    display: flex; /* 플렉스 박스를 사용하여 아이콘과 텍스트를 중앙 정렬 */
    justify-content: center;
    align-items: center;
    flex-direction: column; /* 텍스트와 아이콘을 세로로 정렬 */
    width: 100%;
    text-align: center; /* 텍스트를 가운데 정렬 */
    font-weight: 500; /* 텍스트 굵기를 중간 정도로 설정 */
}

/* 아이콘 스타일 */
.navigation ul li a .icon {
    position: relative;
    display: block;
    line-height: 75px;
    font-size: 1.5em; /* 아이콘 크기를 설정 */
    text-align: center;
    color: #fff; /* 아이콘 색상을 흰색으로 설정 */
    transition: .5s; /* 0.5초 동안 부드럽게 전환 */
}

/* 활성화된 리스트 아이템의 아이콘 스타일 */
.navigation ul li.active a .icon {
    transform: translateY(-32px); /* 활성화된 아이템의 아이콘을 위로 이동 */
}

/* 텍스트 스타일 */
.navigation ul li a .text {
    position: absolute;
    color: #fff; /* 텍스트 색상을 흰색으로 설정 */
    font-weight: 400; /* 텍스트 굵기를 400으로 설정 */
    font-size: .75em; /* 텍스트 크기를 0.75em로 설정 */
    letter-spacing: .05em; /* 글자 간격을 설정 */
    opacity: 0; /* 기본적으로 텍스트는 보이지 않도록 설정 */
    transform: translateY(20px); /* 텍스트를 아래로 이동 */
    transition: .5s; /* 0.5초 동안 부드럽게 전환 */
}

/* 활성화된 리스트 아이템의 텍스트 스타일 */
.navigation ul li.active a .text {
    opacity: 1; /* 텍스트가 보이도록 설정 */
    transform: translateY(10px); /* 텍스트를 약간 위로 이동 */
}
