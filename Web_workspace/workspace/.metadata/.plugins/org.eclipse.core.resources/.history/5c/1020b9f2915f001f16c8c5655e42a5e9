<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>로또 번호 생성기</title>
    <style>
        /* 로또 번호를 나타내는 원형 스타일 */
        .lotto-number {
            display: inline-block; /* 가로로 나란히 배치 */
            width: 40px; /* 원의 너비 설정 */
            height: 40px; /* 원의 높이 설정 */
            line-height: 40px; /* 텍스트를 수직 중앙에 배치 */
            text-align: center; /* 텍스트를 수평 중앙에 배치 */
            border-radius: 50%; /* 둥근 원으로 만듦 */
            background-color: lightblue; /* 기본 배경색 */
            color: white; /* 텍스트 색상 */
            margin: 5px; /* 각 번호 사이의 간격 */
            font-size: 20px; /* 글자 크기 설정 */
            font-weight: bold; /* 글자를 굵게 표시 */
        }

        /* 색상별 구분 */
        .blue { background-color: #4363d8; } /* 첫 세 개 번호 */
        .orange { background-color: #f58231; } /* 네 번째와 다섯 번째 번호 */
        .gray { background-color: #808080; } /* 마지막 번호 */
    </style>
</head>
<body>
    <h1>로또 번호 생성기</h1>
    <!-- 로또 번호를 표시할 div 영역 -->
    <div id="lotto"></div>

    <script>
        function generateLotto() {
            let lottoNumbers = []; // 로또 번호를 저장할 배열

            // 6개의 고유한 번호를 생성
            while (lottoNumbers.length < 6) {
                let number = Math.floor(Math.random() * 45) + 1; // 1부터 45까지 랜덤한 숫자 생성
                if (!lottoNumbers.includes(number)) { // 중복이 아닌 경우에만 배열에 추가
                    lottoNumbers.push(number);
                }
            }

            // 번호를 오름차순으로 정렬
            lottoNumbers.sort((a, b) => a - b);

            // HTML 문자열을 통해 동적으로 로또 번호들을 추가
            let lottoHTML = ''; // 각 번호를 담을 문자열을 초기화
            for (let i = 0; i < lottoNumbers.length; i++) {
                let colorClass = ''; // 번호별로 다르게 적용될 색상 클래스

                // 각 번호의 색상을 결정하는 조건문
                if (i < 3) {
                    colorClass = 'blue'; // 첫 세 개의 번호는 파란색
                } else if (i < 5) {
                    colorClass = 'orange'; // 네 번째와 다섯 번째 번호는 주황색
                } else {
                    colorClass = 'gray'; // 마지막 번호는 회색
                }

                // 번호를 나타내는 HTML 코드를 문자열로 추가
                lottoHTML += '<div class="lotto-number ' + colorClass + '">' + lottoNumbers[i] + '</div>';
            }

            // 완성된 HTML 코드를 lotto div에 추가
            document.getElementById('lotto').innerHTML = lottoHTML;
        }

        // 페이지가 로드되면 로또 번호 생성 함수 실행
        window.onload = generateLotto;
    </script>
</body>
</html>
