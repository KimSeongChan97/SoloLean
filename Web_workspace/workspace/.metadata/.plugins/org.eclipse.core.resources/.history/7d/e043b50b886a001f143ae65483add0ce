	<h3 align="center">회원가입</h3> <!-- 회원가입 제목을 가운데 정렬하고, h3 태그로 크기 설정 -->
	<hr/> <!-- 제목 아래에 구분선을 추가 -->

    <!-- 사용자가 입력한 데이터를 서버에 전송할 수 있도록 method="post"로 설정 -->
    <form method="post" action="#">
        <table>
            <!-- 이름 입력 필드 -->
            <tr>
                <td>이름</td>
                <td><input type="text" name="name" id="name" placeholder="이름 입력">
                <div id="nameDiv"></div>
                </td>
            </tr>

            <!-- 아이디 입력 필드와 중복체크 버튼 -->
            <tr>
                <td>아이디</td>
                <td class="id-field">
                    <input type="text" name="id" size="30" id="id" placeholder="아이디 입력">
                    <input type="button" value="중복체크"/> <!-- 중복체크 버튼을 클릭하면 아이디 중복 여부를 확인할 수 있음 -->
                    <div id="idDiv"></div>
                </td>
            </tr>

            <!-- 비밀번호 입력 필드 -->
            <tr>
                <td>비밀번호</td>
                <td><input type="password" name="pwd" size="40" id="pwd" placeholder="비밀번호 입력">
                <div id="pwDiv"></div>
                </td>
            </tr>

            <!-- 비밀번호 재확인 입력 필드 -->
            <tr>
                <td>재확인</td>
                <td><input type="password" name="repwd" size="40" placeholder="비밀번호 재입력">
                <div id="pwDiv"></div> <!-- 두 비밀번호가 일치하는지 확인할 수 있도록 pwDiv로 구분 -->
                </td>
            </tr>

            <!-- 성별 선택 필드 (라디오 버튼) -->
            <tr>
                <td>성별</td>
                <td>
                    <input type="radio" name="gender" value="M" id="gender" checked="checked" />남자 <!-- 남자 선택이 기본값 -->
                    <input type="radio" name="gender" value="F" id="gender" />여자 <!-- 여자 선택 가능 -->
                </td>
            </tr>

            <!-- 이메일 입력 필드 (datalist로 도메인 선택) -->
            <tr>
                <td>이메일</td>
                <td class="email-field">
                    <input type="email" name="email1" id="email1" placeholder="이메일 입력"> <!-- 이메일 앞부분 입력 -->
                    @ 
                    <input type="text" name="email2" id="email2" placeholder="직접입력" list="email_list" /> <!-- 도메인을 직접 입력하거나 선택 가능 -->
                    <datalist id="email_list">
                        <option value="naver.com"></option> <!-- 사용자가 선택할 수 있는 이메일 도메인 옵션들 -->
                        <option value="gmail.com"></option>
                        <option value="hanmail.com"></option>
                        <option value="daum.net"></option>
                    </datalist>
                </td>
            </tr>

            <!-- 휴대전화 입력 필드 (세 부분으로 나누어 입력) -->
            <tr>
                <td>휴대전화</td>
                <td class="phone-field">
                    <select name="tel1" id="tel1" > <!-- 앞자리를 선택하는 필드 -->
                    	<optgroup label="hp"> <!-- optgroup은 옵션 그룹을 만드는 태그로, 그룹 제목을 지정할 수 있음 -->
                        <option value="010">010</option>
                        <option value="011">011</option>
                        <option value="019">019</option>
                        </optgroup>
                    </select>
                    -
                    <input type="text" name="tel2" id="tel2" size="5" maxlength="4" placeholder="앞자리"> <!-- 전화번호 중간 4자리 -->
                    -
                    <input type="text" name="tel3" id="tel3" size="5" maxlength="4" placeholder="뒷자리"> <!-- 전화번호 마지막 4자리 -->
                </td>
            </tr>

            <!-- 주소 입력 필드 (우편번호 검색 기능 포함) -->
            <tr>
                <td>주소</td>
                <td>
                    <input type="text" name="zipcode" id="zipcode" size="6" readonly placeholder="우편번호"> <!-- 우편번호 입력 필드, 검색 후 자동 입력 -->
                    <input type="button" value="우편번호 검색" onclick="checkPost()"> <!-- 우편번호 검색 버튼 클릭 시 검색 창이 열림 -->
                    <br>
                    <input type="text" name="addr1" id="addr1" size="60" readonly placeholder="주소"> <!-- 검색 후 자동으로 주소 입력 -->
                    <br>
                    <input type="text" name="addr2" id="addr2" size="60" placeholder="상세주소"> <!-- 사용자가 상세 주소를 입력 -->
                </td>
            </tr>

            <!-- 하단에 위치한 회원가입, 다시입력, 뒤로가기 버튼 -->
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="회원가입"/> <!-- 폼 제출 버튼 -->
                    <input type="reset" value="다시입력"/> <!-- 입력 내용을 초기화하는 버튼 -->
                    <input type="button" value="뒤로가기" onclick="window.location.href='../index.jsp';"> <!-- 뒤로가기 버튼 -->
                </td>
            </tr>
        </table>
    </form>
    
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script> <!-- 우편번호 검색을 위한 Daum API 스크립트 로드 -->
<script>
    function checkPost() {
        new daum.Postcode({
            oncomplete: function(data) {
                var addr = ''; 
                
                if (data.userSelectedType === 'R') { 
                    addr = data.roadAddress; /* 사용자가 도로명 주소를 선택한 경우 */
                } else { 
                    addr = data.jibunAddress; /* 사용자가 지번 주소를 선택한 경우 */
                }
				
                document.getElementById('zipcode').value = data.zonecode; /* 선택한 우편번호를 해당 필드에 입력 */
                document.getElementById("addr1").value = addr; /* 선택한 주소를 주소 필드에 입력 */
                document.getElementById("addr2").focus(); /* 상세주소 필드로 포커스 이동 */
            }
        }).open(); /* 우편번호 검색 팝업 열기 */
    }
</script>
     
