package sample03;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class HelloSpring {
    public static void main(String[] args) {
        // Spring 설정 파일을 로드하여 ApplicationContext 생성
        ApplicationContext context = new ClassPathXmlApplicationContext(SpringConfiguration.class);

        // Bean을 가져옴
        SungJuk sungJuk = context.getBean("sungJukImpl", SungJuk.class);

        // 총점 및 평균 계산 후 출력
        sungJuk.calcTot();
        sungJuk.calcAvg();
        sungJuk.display();
        System.out.println();
        
        // modify를 통해 데이터 수정 및 재출력
        sungJuk.modify();
        sungJuk.display();
        System.out.println();
    }
}
