@charset "UTF-8"; /* UTF-8 문자 인코딩 설정 */

/* 전체 기본 설정 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box; /* padding과 border를 포함한 크기 계산 */
}

/* 본문 스타일 */
body {
    font-family: 'Arial', sans-serif; /* 기본 폰트 */
    background-color: #f5f7fa; /* 밝은 회색 배경 */
    display: flex; /* 플렉스 박스를 사용해 정렬 */
    justify-content: center; /* 수평 중앙 정렬 */
    align-items: center; /* 수직 중앙 정렬 */
    height: 100vh; /* 화면 전체를 높이로 채움 */
}

/* 회원정보 수정 폼의 전체 컨테이너 */
#update-jsp {
    display: flex; /* 좌우 레이아웃을 플렉스 박스로 설정 */
    background-color: #fff; /* 흰색 배경 */
    border-radius: 10px; /* 모서리를 둥글게 처리 */
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* 부드러운 그림자 효과 */
    overflow: hidden; /* 요소가 넘치지 않도록 설정 */
}

/* 왼쪽 영역 스타일 (프로필 및 링크) */
#left {
    background-color: #007bff; /* 파란색 배경 */
    padding: 40px; /* 내부 여백 */
    color: white; /* 텍스트 색상 흰색 */
    width: 300px; /* 좌측 영역의 너비 */
    text-align: center; /* 텍스트를 중앙 정렬 */
}

/* 프로필 이미지 스타일 */
#profile img {
    border-radius: 50%; /* 이미지를 원형으로 설정 */
    margin-bottom: 20px; /* 이미지 하단에 여백 */
}

/* 링크 스타일 */
#links a {
    color: white; /* 링크 텍스트 색상 흰색 */
    text-decoration: none; /* 링크의 밑줄 제거 */
    display: block; /* 블록 요소로 변환해 세로로 정렬 */
    margin-top: 10px; /* 위쪽 여백 */
}

/* 오른쪽 폼 영역 스타일 */
#right {
    padding: 40px; /* 내부 여백 */
    width: 500px; /* 오른쪽 영역 너비 */
}

/* 폼 컨테이너 */
#container {
    max-width: 400px; /* 최대 너비 제한 */
    margin: 0 auto; /* 중앙 정렬 */
}

/* 폼 제목 스타일 */
#edit-header {
    font-size: 24px; /* 글자 크기 */
    margin-bottom: 20px; /* 하단 여백 */
    color: #333; /* 텍스트 색상 */
    text-align: center; /* 중앙 정렬 */
}

/* 폼 요소 스타일 */
input[type="text"], input[type="password"] {
    width: 100%; /* 너비를 100%로 설정 */
    padding: 15px; /* 내부 여백 */
    margin: 10px 0; /* 상하 여백 */
    border: 1px solid #ccc; /* 회색 테두리 */
    border-radius: 5px; /* 둥근 모서리 */
    background-color: #fff; /* 흰색 배경 */
    font-size: 16px; /* 글자 크기 */
    color: #333; /* 텍스트 색상 */
}
