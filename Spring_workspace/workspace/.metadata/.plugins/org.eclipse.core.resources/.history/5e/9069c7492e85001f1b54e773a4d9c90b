@charset "UTF-8";

@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

/* 전체 페이지의 어두운 배경 */
body {
    background-color: #0a0a0a; /* 매우 어두운 배경색 */
    color: #f2f2f2; /* 기본 텍스트 색상 */
    font-family: 'Orbitron';
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    overflow: hidden;
}

/* 입력 폼 스타일링 */
form {
    text-align: center; /* 입력 폼 가운데 정렬 */
    background-color: #1a1a1a; /* 입력 폼 배경색 */
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 0 15px #0affff, 0 0 30px #00ffff; /* 네온사인처럼 보이는 폼 테두리 */
    border: 2px solid #0affff; /* 형광 테두리 */
}

/* 테이블 스타일링을 수정하여 세로로 배치 */
table {
    width: 100%;
    text-align: left;
    margin: 0 auto;
}

table tr {
    display: flex;
    flex-direction: column; /* 행을 세로로 나열 */
    margin-bottom: 10px;
}

table td {
    text-align: left; /* 텍스트를 왼쪽 정렬 */
    padding: 10px 0;
}

/* 입력 필드 전체 너비 사용 */
input[type="text"] {
    width: 100%; /* 입력 필드를 테이블 셀의 너비에 맞춤 */
    padding: 10px;
    border: 2px solid #0affff; /* 입력 필드 형광 테두리 */
    background-color: #1a1a1a;
    color: #f2f2f2;
    font-family: 'Orbitron';
    text-align: center;
}

/* 버튼 정렬 및 간격 */
td[colspan="2"] {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
}

/* 버튼의 크기와 간격 */
input[type="submit"], input[type="reset"] {
    padding: 10px 20px;
    width: 100px;
    background-color: #0affff; /* 형광 버튼 */
    color: #000;
    border: none;
    font-size: 1.2em;
    font-family: 'Orbitron' !important;
    cursor: pointer;
    border-radius: 5px;
    box-shadow: 0 0 10px #0affff, 0 0 20px #00ffff;
}

input[type="submit"]:hover, input[type="reset"]:hover {
    box-shadow: 0 0 15px #0affff, 0 0 30px #00ffff;
}
