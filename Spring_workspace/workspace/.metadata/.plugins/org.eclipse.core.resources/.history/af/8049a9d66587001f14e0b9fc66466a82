@charset "UTF-8"; /* UTF-8 문자 인코딩 설정 */

/* 전체적인 초기화 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* 본문 스타일 */
body {
    font-family: 'Arial', sans-serif; /* Arial 폰트 사용 */
    background-color: #f5f7fa; /* 부드러운 회색 배경 */
    margin: 0;
    padding: 20px;
}

/* 테이블 스타일 */
table {
    width: 80%; /* 테이블 너비 80% */
    border-collapse: collapse; /* 테두리 겹침 제거 */
    margin: 20px auto; /* 중앙 정렬 및 상하 여백 */
    background-color: #fff; /* 테이블 배경 흰색 */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* 테이블 그림자 */
}

/* 테이블 헤더 및 셀 스타일 */
th, td {
    padding: 12px; /* 셀 내부 여백 */
    text-align: center; /* 중앙 정렬 */
    border: 1px solid #ddd; /* 회색 테두리 */
}

th {
    background-color: #4CAF50; /* 헤더 배경색 녹색 */
    color: white; /* 헤더 텍스트 색상 흰색 */
    font-weight: bold; /* 텍스트 굵게 */
}

tr:nth-child(even) {
    background-color: #f9f9f9; /* 짝수 행 배경색 */
}

tr:hover {
    background-color: #f1f1f1; /* 마우스 오버 시 배경색 */
}

td {
    font-size: 16px;
    color: #333; /* 기본 텍스트 색상 */
}
