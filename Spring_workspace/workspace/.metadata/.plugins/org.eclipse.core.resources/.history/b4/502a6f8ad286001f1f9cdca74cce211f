@charset "UTF-8";

/* 전체적인 초기화 */
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* 배경 및 폰트 설정 */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f0f2f5; /* 부드러운 회색 배경 */
    color: #333;
    margin: 0;
    padding: 20px;
}

/* 헤더 스타일 */
#header {
    text-align: center;
    margin-bottom: 30px;
}

#header a {
    text-decoration: none;
    color: #007bff;
    font-size: 20px;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px; /* 로고와 텍스트 사이에 간격 추가 */
}

#header img {
    border-radius: 50%; /* 로고 이미지를 둥글게 */
}

/* 테이블 스타일 */
table {
    width: 80%;
    margin: 0 auto;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* 더 깊은 그림자 효과 */
    border-radius: 10px; /* 테이블 모서리를 둥글게 */
    overflow: hidden; /* 테두리 둥글기에 맞게 내용도 잘리도록 */
}

/* 테이블 헤더 스타일 */
th {
    background-color: #007bff; /* 파란색 배경 */
    color: white;
    font-weight: bold;
    padding: 15px;
    text-align: center;
    font-size: 18px;
    text-transform: uppercase; /* 대문자로 표시 */
    letter-spacing: 1px; /* 글자 간격 */
    border-bottom: 2px solid #0056b3; /* 하단에 강조 테두리 */
}

/* 테이블 바디 스타일 */
td {
    padding: 15px;
    text-align: center;
    border-bottom: 1px solid #ddd;
    font-size: 16px;
    color: #555;
    transition: background-color 0.3s ease;
}

/* 홀수 행과 짝수 행 스타일 */
tr:nth-child(even) {
    background-color: #f9f9f9;
}

tr:nth-child(odd) {
    background-color: #ffffff;
}

/* 행에 마우스를 올렸을 때 효과 */
tr:hover {
    background-color: #e0e7ff; /* 부드러운 파란색 하이라이트 */
}

/* 마지막 행 하단 테두리 제거 */
tbody tr:last-child td {
    border-bottom: none;
}

/* 페이지네이션 스타일 */
#pagingDiv {
    text-align: center;
}
#currentPaging {
    padding: 10px;
    margin: 15px;
    border: 1px solid blue;
    color: red;
}
#currentPaging:hover, #paging:hover {
    cursor: pointer;
}
