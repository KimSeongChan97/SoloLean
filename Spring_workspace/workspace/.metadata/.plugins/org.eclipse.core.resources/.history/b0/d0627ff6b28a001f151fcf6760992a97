/* 애니메이션 효과 */
@keyframes fadeIn {
    0% {
        opacity: 0;
        transform: translateY(-20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 중앙에 카드형 박스를 추가 */
.card {
    background: rgba(255, 255, 255, 0.1); /* 유리 효과 */
    padding: 30px;
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.8), inset 0 0 30px rgba(255, 255, 255, 0.1); /* 외부 및 내부 그림자 */
    backdrop-filter: blur(15px) saturate(180%);
    -webkit-backdrop-filter: blur(15px) saturate(180%);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: rgba(0, 210, 255, 0.1); /* 반투명 네온 블루 */
    border: 1px solid rgba(255, 255, 255, 0.2); /* 유리 느낌의 테두리 */
}

/* 카드 박스 호버 시 애니메이션 및 그림자 효과 */
.card:hover {
    transform: translateY(-15px) scale(1.05);
    box-shadow: 0 15px 60px rgba(0, 210, 255, 0.6), inset 0 0 50px rgba(255, 255, 255, 0.3); /* 더 강한 네온 및 그림자 효과 */
}

